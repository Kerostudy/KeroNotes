<%- include('components/head') %>
<div class="card" style="max-width: 450px;min-height: 500px;margin: 130px auto 0px auto;">
  <div class="card-body" style="padding: 48px 40px 36px;">
    <p style="text-align: center"><a href="/index" style="font-size: 26px">KeroNotes</a></p>
    <h3 align="center">ログイン</h3>
    <div style="min-height: 50px;">
      <%- include('components/notification') %>
    </div>
    <form class="needs-validation" novalidate action="/signin" method="POST" style="">
      <div class="form-row" style="min-height: 95px;">
        <div class="col-md-12" style="margin-bottom: 0px;">
          <label for="validationCustom01">メールアドレス / ユーザー名</label>
          <input type="text" class="form-control" id="validationCustom01" placeholder="" value="" name="emailorusername" required>
          <div class="invalid-feedback">
            あなたのメールアドレスかユーザー名を入力してください
          </div>
        </div>
      </div>
      <div class="form-row" style="min-height: 95px">
        <div class="col-md-12">
          <label for="validationCustom05">パスワード</label>
          <input type="password" class="form-control" id="validationCustom05" placeholder="" name="password" required>
          <div class="invalid-feedback">
            パスワードを入力してください
          </div>
        </div>
      </div>
      <!-- <div class="g-recaptcha" data-sitekey="6LcYjn8UAAAAACG4l85jmbf5yMGFRk3jeA_btJl8" style="margin-top: 10px;"></div> -->
      <div style="margin-top: 30px;">
        <button type="submit" class="btn btn-primary" id="submit">ログイン</button>
        <a href="/forgot" style="font-size: 14px;float:right;padding-top: 8px;">パスワードを忘れました</a>
      </div>
    </form>
  </div>
</div>
</div>
